<div class='section'>
  <header>All Bands</header>
  <ul>
    <% Band.all.each do | band | %>
      <li><%= band.name %></li>
    <% end %>
  </ul>
</div>

<div class='section'>
  <header><h3>Add a Band</h3></header>
  <form action='/bands' method='post'>
    <input type='text' id='name' name='name'>
    <button type='submit'>Add</button>
  </form>
</div>
