<div class='section'>
  <header><h3>All Bands</h3></header>
  <div class='listbox'>
    <ul>
      <% Band.all.each do | band | %>
        <li><a href='/bands/<%= band.id %>/edit'><%= band.name %></a></li>
      <% end %>
    </ul>
  </div>
</div>
<div class='section'>
  <header><h3>Add a Band</h3></header>
  <form action='/bands' method='post'>
    <input type='text' id='name' name='name'>
    <button type='submit'>Add</button>
  </form>
</div>
